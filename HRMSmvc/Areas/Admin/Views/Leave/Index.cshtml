<div class="card">
    <div class="card-body">
        <h5 class="card-title">List of Employees</h5>
        <!-- Default Table -->
        <table class="table">
            <thead>
                <tr>
                    @* <th scope="col">ID</th> *@
                    <th scope="col">S.N.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Applied On</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">End Date</th>
                    <th scope="col">Reason</th>
                    <th scope="col">Description</th>
                    <th scope="col">Leave Type</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model)
                {
                    <tr>
                        @* <td>@row.Id</td> *@
                        <td>@counter</td>
                        <td>@row.Name</td>
						<td>@row.Email</td>
						<td>@row.AppliedOn.ToString("yyyy-MM-dd")</td>
						<td>@row.StartDate.ToString("yyyy-MM-dd")</td>
						<td>@row.EndDate.ToString("yyyy-MM-dd")</td>
						<td>@row.Reason</td>
                        <td>@row.Description</td>
						<td>@row.LeaveType</td>
						<td>@row.Status</td>
                        @if(@row.Status == LeaveStatus.Pending)
                        {
                            <td>
                                <button class="btn btn-success ApproveBtn" data-id="@row.Id" title="Approve Leave">
                                    <i class="fa fa-check"></i> 
                                </button>
                            </td>
                            <td>
                                <button class="btn btn-danger RejectBtn" data-id="@row.Id" title="Reject Leave">
                                    <i class="fa fa-times"></i> 
                                </button>
                            </td>
                        }
                        else
                        {
                            <td>
                                
                            </td>
                            
                        }
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
	<script src="~/js/leave.js"></script>
    }


