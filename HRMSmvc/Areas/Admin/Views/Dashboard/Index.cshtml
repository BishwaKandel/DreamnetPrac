@using Domain.DTO
@using Domain.Models
@model List<UserDTO>
@{
    ViewData["Title"] = "Fetching Data from Web API";
}
@{
    int counter = 1;
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">List of Employees</h5>
        <!-- Default Table -->
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">S.N.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Date of Birth</th>
                    <th scope="col">Joining Date</th>
                    <th scope="col">Position</th>
                    <th scope="col">Salary</th>
                    <th scope="col">Address</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@row.Name</td>
                        <td>@row.Email</td>
                        <td>@row.PhoneNumber</td>
                        <td>@row.DOB.ToShortDateString()</td>
                        <td>@row.JoiningDate.ToShortDateString()</td>
                        <td>@row.Position</td>
                        <td>@row.Salary</td>
                        <td>@row.Address</td>
                        <td>
                            <!-- Dropdown Menu for Actions -->
                            <div class="dropdown">
                                <a href="javascript:void(0);" id="dropdownMenuButton-@row.Id" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-ellipsis"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton-@row.Id">
                                    <li>
                                        <a class="dropdown-item" href="/Admin/Dashboard/CreateorEdit?id=@row.Id">
                                            <i class="fa-solid fa-pen"></i> Edit
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="/users-settings/@row.Id">
                                            <i class="fa-solid fa-trash"></i> Delete
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="/Admin/Payroll/ViewPayroll?userId=@row.Id">
                                            <i class="fa-solid fa-money-bill"></i> Payroll
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="/Admin/Attendance/GetAttendanceByEmpID?userId=@row.Id">
                                            <i class="fa-solid fa-calendar-days"></i> Attendance
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).on("click", ".delete-btn", function () {
            var id = $(this).data("id");

            if (confirm("Are you sure you want to delete this employee?")) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Delete", "Employee")',
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload(); // refresh table
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("Something went wrong!");
                    }
                });
            }
        });
    </script>
}
